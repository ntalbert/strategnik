---
import BaseLayout from '../layouts/BaseLayout.astro';

const workHistory = [
  {
    company: "BRIA AI",
    companyDesc: "Visual Generative AI",
    role: "VP, Marketing & Growth Operations",
    period: "2024-2026",
    context: "Open-source visual generative AI platform serving enterprise customers including EA, P&G, Lucasfilm, Disney, and Rakuten.",
    highlight: "Generated $18.3M+ in partner-sourced pipeline via AWS, NVIDIA, and Qualcomm co-marketing programs. Built developer pipeline through community engagement and PLG experimentation. Drove 30% increase in organic traffic through AI-driven discovery optimization.",
    outcome: null,
    video: "/videos/work-bria.mp4"
  },
  {
    company: "Wallarm",
    companyDesc: "API Security Platform",
    role: "Demand Gen & Dev Community",
    period: "2023-2024",
    context: "API and application security platform targeting developer and security teams.",
    highlight: "20% increase in marketing-sourced pipeline through optimized lead routing and scoring. 30% enhancement in lead quality through data-centric ABM strategy with DemandBase integration. 18% uplift in conversion rates via CRO initiatives.",
    outcome: null,
    video: "/videos/work-wallarm.mp4"
  },
  {
    company: "Lumen Technologies",
    companyDesc: "Enterprise Network Infrastructure",
    role: "ABM Demand Gen Engine Build",
    period: "2023-2024",
    context: "Enterprise network and edge computing infrastructure.",
    highlight: "26% improvement in data integrity across Salesforce, Marketo, and DemandBase. Developed predictive analytics model improving propensity-to-buy scores by 30%. 25% increase in engagement for banking/finance and retail sectors.",
    outcome: null,
    video: "/videos/work-lumen.mp4"
  },
  {
    company: "Crux",
    companyDesc: "Data Engineering Platform",
    role: "Demand Gen Engine Build",
    period: "2022-2023",
    context: "Data engineering platform targeting technical data teams.",
    highlight: "157% increase in lead-to-value velocity through optimized CRM workflows. 25-30% reduction in average cost per MQL and SQL. 40% surge in daily website traffic within two months via rapid-deployment SEO program.",
    outcome: null,
    video: "/videos/work-sizmek.mp4"
  },
  {
    company: "OnFrontiers",
    companyDesc: "Expert Network Marketplace",
    role: "Two-Sided Marketplace Growth",
    period: "2021-2022",
    context: "Expert network marketplace connecting enterprise buyers with domain experts.",
    highlight: "Built simultaneous demand-side (enterprise buyers) and supply-side (expert network) audiences. 30% reduction in Customer Acquisition Cost through automation and attribution. Delivered 100+ new website pages establishing organic discovery infrastructure.",
    outcome: null,
    video: "/videos/work-onfrontiers.mp4"
  },
  {
    company: "Quartile",
    companyDesc: "E-commerce Advertising Automation",
    role: "VP of Marketing & Operations",
    period: "2021-2022",
    context: "E-commerce advertising automation platform.",
    highlight: "Managed $13M annual budget with full attribution visibility. Counteracted 300% surge in SQL costs (Apple privacy updates) in under three weeks through rapid ABM pivot. Reduced BANT-qualified SQL costs by 30% via CRM optimization.",
    outcome: null,
    video: "/videos/work-quartile-new.mp4"
  },
  {
    company: "Certent",
    companyDesc: "Equity Management SaaS",
    role: "Senior Director, Global Demand Marketing",
    period: "2018-2021",
    context: "Equity management and financial reporting SaaS.",
    highlight: "53% increase in marketing-to-sales pipeline speed. 170% surge in pipeline volume via integrated Salesforce and Marketo automation. ~40% reduction in CAC through continuous analytics optimization. Built infrastructure achieving 35% EBITDA target.",
    outcome: "Acquired by insightsoftware",
    video: "/videos/work-certent.mp4"
  },
  {
    company: "VideoAmp",
    companyDesc: "Cross-Platform TV Measurement",
    role: "Senior Director of Product Management",
    period: "2017-2018",
    context: "Cross-platform TV and digital measurement platform.",
    highlight: "Defined and operationalized clean room methodologies for activation and measurement within Google clean rooms. Built integrations enabling brands to combine first-party data with Acxiom audiences and set-top box viewership signals.",
    outcome: null,
    video: "/videos/work-sizmek.mp4"
  },
  {
    company: "Sizmek",
    companyDesc: "Ad Serving & Creative Optimization",
    role: "VP of Product Management",
    period: "2009-2014",
    context: "Global ad serving and creative optimization platform.",
    highlight: "Led team of 12 product managers, marketers, and analysts. Owned product vision for advertiser reporting console and smart creative versioning. Defined PRDs for OLAP-based analytics enabling performance analysis across placements, audiences, and messaging.",
    outcome: "Acquired by Amazon",
    video: "/videos/work-sizmek.mp4"
  },
  {
    company: "Adapt.tv",
    companyDesc: "Video Advertising DSP",
    role: "Associate VP, Product",
    period: "2014-2015",
    context: "Video advertising platform and DSP.",
    highlight: "Led integration of Convertro multi-touch attribution data into AOL One Platform. Owned end-to-end methodology for ingesting, normalizing, and activating attribution signals across display and video at enterprise scale.",
    outcome: "Acquired by AOL",
    video: "/videos/work-adapttv.mp4"
  }

---
import BaseLayout from '../layouts/BaseLayout.astro';

const workHistory = [
  {
    company: "BRIA AI",
    role: "VP Marketing & Growth",
    period: "2023-2024",
    context: "Series A visual AI platform for enterprise",
    highlight: "Built significant pipeline through partner-sourced leads from AWS, NVIDIA, and Qualcomm.",
    outcome: null
  },
  {
    company: "Quartile",
    role: "Demand Generation Leader",
    period: "2021-2023",
    context: "E-commerce advertising automation",
    highlight: "Managed substantial marketing budget under tight EBITDA constraints while maintaining pipeline growth.",
    outcome: null
  },
  {
    company: "Certent",
    role: "Marketing Leadership",
    period: "2019-2021",
    context: "Equity management and financial reporting SaaS",
    highlight: "Demonstrated expertise in budget allocation and growth loop optimization for enterprise sales motion.",
    outcome: null
  },
  {
    company: "Sizmek",
    role: "Marketing Strategy",
    period: "Earlier",
    context: "Adtech platform",
    highlight: "Part of leadership team through acquisition. Built demand programs for complex, technical buying committees.",
    outcome: "Acquired by Amazon"
  },
  {
    company: "Adapt.tv",
    role: "Marketing Strategy",
    period: "Earlier",
    context: "Video advertising platform",
    highlight: "Early stage marketing leadership building brand and demand in emerging category.",
    outcome: "Acquired by AOL"
  }
];
---

<BaseLayout
  title="Work"
  description="Selected projects and outcomes from 20+ years building demand generation engines for B2B SaaS companies."
>

  <!-- Hero -->
  <section class="section">
    <div class="container-narrow">
      <p class="section-label">Work</p>
      <h1 class="text-display-lg mb-8" data-animate-hero>
        Building engines at inflection points
      </h1>
      <p class="text-body-lg text-gray-600" data-animate-hero-sub>
        20+ years across adtech, martech, and B2B SaaS. Three acquisitions.
        A pattern of joining companies at critical moments and building the
        demand generation infrastructure that scales.
      </p>
    </div>
  </section>

  <!-- Stats -->
  <section class="section-sm border-t border-gray-200">
    <div class="container-narrow">
      <div class="flex flex-wrap gap-12" data-animate-stagger="0.1">
        <div>
          <p class="text-display-lg text-black">20+</p>
          <p class="text-small text-gray-600">Years in B2B SaaS</p>
        </div>
        <div>
          <p class="text-display-lg text-black">3</p>
          <p class="text-small text-gray-600">Companies acquired</p>
        </div>
        <div>
          <p class="text-display-lg text-black">F500</p>
          <p class="text-small text-gray-600">Client experience</p>
        </div>
        <div>
          <p class="text-display-lg text-black">A→C</p>
          <p class="text-small text-gray-600">Series expertise</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Work History -->
  <section class="section border-t border-gray-200">
    <div class="container-narrow">
      <p class="section-label">Experience</p>
      <h2 class="text-display mb-12" data-animate>Selected Work</h2>

      <div class="space-y-12" data-animate-stagger="0.1">
        {workHistory.map((work) => (
          <div class="border-b border-gray-100 pb-12 last:border-0">
            <div class="flex flex-wrap justify-between items-start gap-4 mb-4">
              <div>
                <h3 class="text-heading text-black">{work.company}</h3>
                <p class="text-small text-gray-600">{work.role} · {work.period}</p>
              </div>
              {work.outcome && (
                <span class="text-small text-accent">
                  {work.outcome}
                </span>
              )}
            </div>
            <p class="text-body text-gray-600 mb-2">
              {work.context}
            </p>
            <p class="text-body text-gray-600">
              {work.highlight}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Earlier Work -->
  <section class="section border-t border-gray-200">
    <div class="container-narrow">
      <p class="section-label">Earlier Career</p>
      <h2 class="text-heading mb-6" data-animate>Agency & Consulting Background</h2>
      <div class="prose-minimal">
        <p data-animate data-animate-delay="0.1">
          Before going in-house, I spent years on the agency and consulting side, working
          with brands including Yahoo, Discovery Communications, and Conde Nast. This
          background in brand strategy and consumer insight research informs how I think
          about B2B positioning—the same principles apply, just with different buying
          dynamics.
        </p>
        <p data-animate data-animate-delay="0.15">
          The agency experience taught me to diagnose quickly and execute pragmatically.
          When you're billing by the hour, you learn to find the lever that matters instead
          of boiling the ocean.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section border-t border-gray-200">
    <div class="container-narrow">
      <h2 class="text-heading mb-4" data-animate>Want the full story?</h2>
      <p class="text-body text-gray-600 mb-6 max-w-prose" data-animate data-animate-delay="0.1">
        The best way to understand how I work is to have a conversation.
        No pitch, just discussion.
      </p>
      <div class="flex flex-wrap gap-6" data-animate data-animate-delay="0.2">
        <a href="mailto:nick@strategnik.com" class="text-black hover:text-accent transition-colors">
          Get in touch →
        </a>
        <a href="/about" class="text-gray-600 hover:text-black transition-colors">
          Read more about me →
        </a>
      </div>
    </div>
  </section>

</BaseLayout>

---
const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/physics-of-marketing', label: 'Framework' },
  { href: '/writing', label: 'Writing' },
  { href: '/work', label: 'Work' },
  { href: '/services', label: 'Services' },
];
---

<header class="py-6">
  <nav class="container-content">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="transition-opacity hover:opacity-80">
        <img src="/logo.png" alt="Strategnik - B2B Marketing Strategy" class="h-56 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center bg-black rounded-xl px-6 py-3 gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`font-extrabold text-white hover:text-gray-300 transition-colors text-lg`}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-3 bg-black rounded-xl text-white hover:text-gray-300 transition-colors"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden mt-6">
    <div class="container-content">
      <div class="bg-black rounded-xl px-6 py-4 space-y-4">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="block py-2 text-lg font-extrabold text-white hover:text-gray-300 transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = document.querySelector('.menu-open');
  const menuClose = document.querySelector('.menu-close');

  menuBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
    menuBtn.setAttribute('aria-expanded', (!isOpen).toString());
  });
</script>

---
const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/physics-of-marketing', label: 'Physics of Marketing' },
  { href: '/writing', label: 'Writing' },
  { href: '/work', label: 'Work' },
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
];
---

<header class="sticky top-0 z-50 bg-cream/95 backdrop-blur-sm border-b border-gray-rule">
  <nav class="container-content">
    <div class="flex items-center justify-between h-18">
      <!-- Logo -->
      <a href="/" class="group flex items-center gap-3">
        <span class="text-heading font-semibold text-charcoal-deep tracking-tight group-hover:text-forest transition-colors duration-200">
          Strategnik
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class={pathname.startsWith(link.href) ? 'nav-link-active' : 'nav-link'}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 text-charcoal hover:text-forest transition-colors"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-rule">
    <div class="container-content py-6 space-y-4">
      {navLinks.map((link) => (
        <a 
          href={link.href}
          class={`block py-2 ${pathname.startsWith(link.href) ? 'text-forest font-medium' : 'text-charcoal hover:text-forest'}`}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = document.querySelector('.menu-open');
  const menuClose = document.querySelector('.menu-close');

  menuBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
    menuBtn.setAttribute('aria-expanded', (!isOpen).toString());
  });
</script>
